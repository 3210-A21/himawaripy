application=himawaripy
pkgname=${application}-git
pkgrel=1
pkgver=r63.ab64e76
pkgdesc="Put near-realtime picture of Earth as your desktop background."
url="https://github.com/wesbarnett/${application}"
arch=('x86_64' 'i686')
depends=('python' 'python-pillow')
makedepends=('git')
source=("${application}::git+https://github.com/wesbarnett/${application}")
sha256sums=('SKIP')

package() {
  cd ${srcdir}/${application}
  python setup.py install --root="$pkgdir/" --optimize=1
}

pkgver() {
  cd ${application}
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}
